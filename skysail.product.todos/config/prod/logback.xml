<configuration scan="true">

    <logger name="org.eclipse.jetty" level="WARN"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <!--%d{mm:ss.SSS} [%thread]-->
            <pattern>%date{ISO8601}  %-5level [%-45logger{40}] - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="WARN_FILE" class="ch.qos.logback.core.FileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <file>etc/logs/warn.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%-45logger{40}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="INFO_FILE" class="ch.qos.logback.core.FileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <file>etc/logs/info.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%-45logger{40}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <file>etc/logs/debug.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%-45logger{40}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="GELF UDP APPENDER" class="me.moocar.logbackgelf.GelfUDPAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <remoteHost>localhost</remoteHost>
        <port>12201</port>
        <encoder class="me.moocar.logbackgelf.GZIPEncoder">
            <layout class="me.moocar.logbackgelf.GelfLayout">
              <staticField class="me.moocar.logbackgelf.Field">
			    <key>_srcIdent</key>
			    <value>ssp.todos.prod</value>
			  </staticField>
            </layout>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="INFO_FILE" />
        <appender-ref ref="DEBUG_FILE" />
        <appender-ref ref="WARN_FILE" />
        <appender-ref ref="GELF UDP APPENDER" />
    </root>

</configuration>