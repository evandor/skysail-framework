renderTableMobile(resource, source, fields, converter, messages) ::= <<
  <ul data-role="listview" data-inset="true" data-filter="false">
  $source:{ row | $renderRow(fields,row,i)$}$
  </ul>
>>

renderRow(fields, row,i) ::= <<
    $fields: { field | $buttonForLink(row, field)$}$
>>

buttonForLink(row, field) ::= <<
    $if (field.link)$
      <li><a href="$row.("_href")$">$row.("name")$ <span class="ui-li-count">$row.("todosCount")$</span></a></li>
    $endif$
>>