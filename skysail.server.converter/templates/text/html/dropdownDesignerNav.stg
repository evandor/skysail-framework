dropdownDesignerNav(services) ::= <<
    $if(services.designerAppMenuItems)$
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">DesignerApps <span class="caret"></span></a>
      <ul class="dropdown-menu" role="menu">
        $services.designerAppItems:{ item | $designerMenuItem(item)$}$
      </ul>
    </li>
    $endif$
>>

designerMenuItem(item) ::= <<
        <li><a href='$item.link$'><img src='$item.applicationImage$' width='16px' alt=''>&nbsp;$item.name$</a></li>
        
>>