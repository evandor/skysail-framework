mainContent(user, resource, converter, messages, source, model) ::= <<
  
  <div class="row">
    <div class="col-md-1">$appNav(model)$</div>
    <div class="col-md-10">
      <!-- contentHeader -->
$contentHeader(converter, messages)$
    </div>
  </div>
    
  <div class="row">
    <div class="col-md-1">&nbsp;</div>
    <div class="col-md-8">
      $if(source.form)$
        <!-- showForm -->
        $showForm(source, model.formfields, messages, model)$ 
      $elseif(source.list)$
        <!-- renderTable -->
        $renderTable(source, model.formfields, converter, messages, model)$
      $else$
        <!-- render single entity -->
        $renderEntity(user, resource, source, model)$
      $endif$ 
    </div>
    <div class="col-md-3">
      $if(source.form)$
        $renderEntityInfo(resource, source, model.formfields, messages)$ 
      $endif$ 
    </div>
  </div>
>>