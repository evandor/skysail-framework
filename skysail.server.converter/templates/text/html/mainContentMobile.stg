mainContentMobile(user, resource, converter, messages, source, model) ::= <<
  
$contentHeader(converter, messages)$

$if(source.form)$
  <!-- showFormMobile -->
  $showFormMobile(source, model.formfields, messages, model)$ 
$elseif(source.list)$
  <!-- renderTableMobile -->
  $renderTableMobile(source, model.formfields, converter, messages, model)$
$else$
  <!-- render single entity mobile -->
  $renderEntityMobile(user, resource, source, model)$
$endif$ 

>>