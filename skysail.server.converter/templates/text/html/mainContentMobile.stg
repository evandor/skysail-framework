mainContentMobile(user, resource, converter, messages, source, fields) ::= <<
  
  <div class="row">
    <div class="col-md-1">$appNav(resource)$</div>
    <div class="col-md-10">
      <!-- contentHeader -->
$contentHeader(converter, messages)$
    </div>
  </div>
    
  <div class="row">
    <div class="col-md-12">
      $if(source.form)$
        <!-- showForm -->
        $showForm(resource, source, fields, messages)$ 
      $elseif(source.list)$
        <!-- renderTable -->
        $renderTableMobile(resource, source, fields, converter, messages)$
      $else$
        <!-- render single entity -->
        $renderEntity(user, resource, source, fields)$
      $endif$ 
    </div>
  </div>
>>