mainContentMobile(user, converter, messages, source, model) ::= <<
  
$contentHeader(converter, messages, model)$

$if(model.form)$
  <!-- showFormMobile -->
  $showFormMobile(source, model.formfields, messages, model)$ 
$elseif(model.list)$
  <!-- renderTableMobile -->
  $renderTableMobile(source, model.formfields, converter, messages, model)$
$else$
  <!-- render single entity mobile -->
  $renderEntityMobile(user, source, model)$
$endif$ 

>>