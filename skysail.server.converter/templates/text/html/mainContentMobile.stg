mainContentMobile(user, resource, converter, messages, source, fields) ::= <<
  
$if(source.form)$
  <!-- showForm -->
  $showFormMobile(resource, source, fields, messages)$ 
$elseif(source.list)$
  <!-- renderTable -->
  $renderTableMobile(resource, source, fields, converter, messages)$
$else$
  <!-- render single entity -->
  $renderEntityMobile(user, resource, source, fields)$
$endif$ 

>>