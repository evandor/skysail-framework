mainContentMobile(user, resource, converter, messages, source, model) ::= <<
  
$contentHeader(converter, messages)$

$if(source.form)$
  <!-- showForm -->
  $showFormMobile(resource, source, model.formfields, messages, model)$ 
$elseif(source.list)$
  <!-- renderTable -->
  $renderTableMobile(resource, source, model.formfields, converter, messages, model)$
$else$
  <!-- render single entity -->
  $renderEntityMobile(user, resource, source, model)$
$endif$ 

>>