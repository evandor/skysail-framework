breadcrumb(resource) ::= <<
  <ul class="breadcrumb">
    $resource.breadcrumbs:{ breadcrumb | $handleSingleBreadcrumb(breadcrumb,i)$}$
  </ul>
>>

handleSingleBreadcrumb(bc,i) ::= <<
    $if(bc.href)$
      <li><a href='$bc.href$'>$bc.value$</a></li>
    $else$
      <li><b>$bc.value$</b></li>
    $endif$
>>