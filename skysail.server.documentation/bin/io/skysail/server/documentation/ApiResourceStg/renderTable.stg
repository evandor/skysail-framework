renderTable(resource, source, fields) ::= <<

  $resource.pagination$
  ***
  <table class="table">
    <tr><th>#</th>$renderHeader(fields)$<th>Actions</th></tr>
    $source:{ row | $renderRow(row,i)$}$
  </table>
>>

renderRow(row,i) ::= <<
  <tr>$row.keys:{ key | $renderColumn(row, key,i)$}$</tr>
>>

renderColumn(row, key, i) ::= <<
  <td>&nbsp;$row.(key)$&nbsp;</td>
>>

renderHeader(fields) ::= <<
  $fields: { field | <th>$field.name$</th>}$
>>